    <test name="LoginPage Test">
         <classes>
             <class name="com.qa.hubspot.tests.LoginPageTest"/>
          </classes>
     </test> <!-- Test -->
     
     <test name="AccountsPage Test">
         <classes>
             <class name="com.qa.hubspot.tests.AccountsPageTest"/>
          </classes>
     </test> <!-- Test -->
     
      <test name="ProductInfoPage Test">
